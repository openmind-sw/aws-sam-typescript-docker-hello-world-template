{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,
    "moduleResolution":"node",                            
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true,
    "sourceMap": false,
    "preserveConstEnums": true
  },
  "exclude": ["node_modules"]
}
